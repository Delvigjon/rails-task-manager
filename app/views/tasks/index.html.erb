<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <div class="task">
    <%= check_box_tag "task_#{task.id}", task.id, task.completed, disabled: true %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'Delete', destroy_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </div>
<% end %>
<%= link_to 'Add', new_task_path %>
