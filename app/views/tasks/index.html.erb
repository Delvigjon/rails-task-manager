<div class="container w-50">

  <h1 class="my-4">My Tasks</h1>

  <div class="list-group ">
    <% @tasks.each do |task| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= check_box_tag "task_#{task.id}", task.id, task.completed, disabled: true, class: 'me-2' %>
          <%= link_to task.title, task_path(task), class: 'text-decoration-none' %>
        </div>
        <div>
          <%= link_to 'Add', new_task_path, class: 'btn btn-success btn-sm' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-sm ' %>
          <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>

<div class="my-4">

</div>
</div>
